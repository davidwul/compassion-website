        <template
      id="my_account_crowdfunding"
      name="My account Crowdfunding"
      inherit_id="my_compassion.my_account_menu"
    >
            <xpath expr="//a[@href='/my/letter']" position="after">
                <t
          t-if="request.env.user.partner_id.crowdfunding_project_count"
        >
                    <a
            href="/my/together"
            role="menuitem"
            class="dropdown-item"
          >Together</a>
                </t>
            </xpath>
        </template>
        <template
      id="my_account_crowdfunding_view_template"
      name="My Account Together"
    >
            <t t-set="selected" t-value="'together'" />
            <t t-call="portal.frontend_layout">
                <div class="container" t-if="owned_projects">
                    <h3
            class="text-primary mt-4 mb-2 text-center text-uppercase"
          >Your own projects</h3>
                    <section class="projects no-padding-top center">
                        <t t-set="projects" t-value="owned_projects" />
                        <t
              t-call="crowdfunding_compassion.my_account_project_board"
            />
                    </section>
                </div>

                <div class="container w-100" t-if="participating_projects">
                    <h3
            class="text-primary my-2 text-center text-uppercase"
          >Projects you participate to</h3>
                    <section class="projects no-padding-top center">
                        <t
              t-set="participations"
              t-value="participating_projects"
            />
                        <t
              t-call="crowdfunding_compassion.my_account_participation_board"
            />
                    </section>
                </div>

                <div class="container w-100" t-if="donations">
                    <h3 class="text-primary my-2 text-center">Donations</h3>
                    <section class="text-center">
                        <t
              t-call="crowdfunding_compassion.my_account_donation_board"
            />
                    </section>
                </div>
            </t>
        </template>

