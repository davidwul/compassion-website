<odoo>
    <record id="events_page" model="website.page">
        <field name="name">Events list</field>
        <field name="website_published">True</field>
        <field name="url">/events</field>
        <field name="type">qweb</field>
        <field name="website_id" eval="False"/>
        <field name="view_id" ref="website_event_compassion.list"/>
    </record>

    <!-- Copied form contact-us-thankyou   -->
    <record id="form_success" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/form-thank-you</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">website_event_compassion.form_success</field>
        <field name="arch" type="xml">
            <t name="Thanks (Compassion)" t-name="website_event_compassion.form_success">
                <t t-call="website.layout">
                    <t t-set="message">message</t>
                    <t t-set="params" t-value="request.params"/>
                    <div id="wrap">
                        <div class="oe_structure"/>
                        <div class="container mt-4">
                            <div class="row">
                                <div class="col-lg-7 col-xl-6 mr-lg-auto oe_structure">
                                    <section class="pt40 s_text_block pb40 o_colored_level o_cc o_cc1" data-snippet="s_text_block" data-name="Text">
                                        <div class="container">
                                            <span class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary"/><br/>
                                            <h1 class="text-center">Thank You!</h1>
                                            <div class="pb16 pt16 s_hr" data-snippet="s_hr" data-name="Separator">
                                                <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                            </div>
                                            <h5 class="text-center">
                                                <span class="fa fa-check-circle"/>
                                                <span>
                                                    Your <span t-raw="params.get('action_done', message)"/>
                                                    has been sent <b>successfully</b>
                                                </span>
                                            </h5>
                                            <p class="text-center">We will get back to you shortly.</p>
                                            <a t-att-href="params.get('next_url')"
                                               t-if="params.get('next_url')"
                                               class="mt-2 btn btn-outline-primary btn-large w-100">Continue
                                            </a>
                                        </div>
                                    </section>
                                </div>
                                <div class="col-lg-4">
                                </div>
                            </div>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>
