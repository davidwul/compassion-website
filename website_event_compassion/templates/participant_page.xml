<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="participant_page" name="Compassion event participant page">
        <t t-if="registration.profile_picture">
            <t t-set="ambassador_picture" t-value="'/web/image/event.registration/' + str(registration.id) + '/profile_picture'"/>
            <t t-set="image_url" t-value="ambassador_picture + '/300x300'"/>
        </t>
        <t t-else="">
            <t t-set="ambassador_picture" t-value="'/website_event_compassion/static/src/img/default-user-image.png'"/>
            <t t-set="image_url" t-value="ambassador_picture"/>
        </t>
        <t t-call="website.layout">
            <t t-set="additional_title" t-value="registration.profile_name + ' - ' + event.name"/>
            <div class="oe_structure"/>
            <section
                    class="s_picture bg-200 o_colored_level pb-4"
                    data-snippet="s_picture" data-name="Picture">
                <div class="container">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/events">Events</a></li>
                            <li
                                    class="breadcrumb-item"><a
                                    t-att-href="event.website_url"><t t-esc="event.name"/></a></li>
                            <li class="breadcrumb-item active"
                                aria-current="page"><t t-esc="registration.profile_name"/></li>
                        </ol>
                    </nav>
                    <h2 class="text-center text-uppercase mb-4">
                        Support <t t-esc="registration.profile_name"/>
                    </h2>
                    <div class="row s_nb_column_fixed">
                        <div class="col-lg-10 offset-lg-1 o_colored_level" style="text-align: center;">
                            <figure class="figure">
                                <img
                                        t-att-src="ambassador_picture"
                                        class="figure-img img-thumbnail padding-large" alt="" loading="lazy" data-original-id="140127" data-original-src="/theme_compassion/static/src/img/snippets/s_picture.jpg" data-mimetype="image/jpeg" data-original-title="" title="" aria-describedby="tooltip693698"/>
                                <figcaption class="figure-caption text-muted"
                                            t-if="registration.ambassador_quote"
                                            t-field="registration.ambassador_quote"/>
                            </figure>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5 col-md-2">
                            <span>Funds raised:</span>
                        </div>
                        <div class="col-7 col-md-10">
                            <t t-call="website_event_compassion.event_barometer">
                                <t t-set="barometer" t-value="registration"/>
                                <t t-set="amount_inside" t-value="True"/>
                                <t t-set="barometer_amount_class">w-100 m-auto
                                    text-center</t>
                                <t t-set="barometer_bg_class">bg-100 shadow-sm h-100</t>
                            </t>
                        </div>
                    </div>
                    <div data-snippet="s_share" class="s_share text-center pt-4" data-name="Share">
                        <h4 class="s_share_title d-none o_default_snippet_text">Share</h4>
                        <a href="https://www.facebook.com/sharer/sharer.php?u={url}" target="_blank" class="s_share_facebook ">
                            <i class="fa fa-facebook rounded shadow-sm"/>
                        </a>
                        <a href="https://twitter.com/intent/tweet?text={title}&amp;url={url}" target="_blank" class="s_share_twitter ">
                            <i class="fa fa-twitter rounded shadow-sm"/>
                        </a>
                        <a href="https://wa.me/?text={title}" target="_blank" class="s_share_whatsapp ">
                            <i class="fa fa-whatsapp rounded shadow-sm"/>
                        </a>
                        <a href="mailto:?body={url}&amp;subject={title}" class="s_share_email ">
                            <i class="fa fa-envelope rounded shadow-sm"/>
                        </a>
                    </div>
                </div>
            </section>
            <t t-call="website_event_compassion.event_registration_call_to_action"/>
            <t t-call="website_event_compassion.event_donation"/>
            <div class="oe_structure"/>
        </t>
    </template>

    <template id="event_registration_call_to_action">
        <section class="s_call_to_action o_cc o_cc3 pt48 pb24" data-snippet="s_call_to_action" data-name="Call to Action">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <h3>
                            <span style="font-size: 27.4286px;">
                                <b>Join him and release a child from extreme poverty.</b>
                            </span>
                            <br/>
                        </h3>
                        <p>Sponsoring a child converts to an equivalent donation
                            of <span
                                    t-field="registration.event_id.sponsorship_donation_value"/>
                            and will raise the barometer
                            of
                            <t t-esc="registration.profile_name"/> accordingly.</p>
                    </div>
                    <div class="col-lg-3">
                        <a t-att-href="registration.sponsorship_url"
                           class="btn btn-primary text-uppercase w-100 mb-2">Sponsor a
                            child</a>
                        <a href="#event_donation_form"
                           class="btn btn-primary text-uppercase w-100">Donate
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="sponsorship_form_with_ambassador"
              inherit_id="website_sponsorship.child_sponsorship_form">
        <xpath expr="//div[@id='origin_details']" position="after">
            <div id="registration_id"
                 class="form-group s_website_form_field s_website_form_field_hidden col-12" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="input_ambassador">
                        <span
                                class="s_website_form_label_content">Ambassador
                        </span>
                    </label>
                    <div class="col-sm">
                        <input type="number"
                               class="form-control s_website_form_input"
                               name="registration_id"
                               id="input_ambassador"
                               t-att-value="registration_id"
                        />
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
