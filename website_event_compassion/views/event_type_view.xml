<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="event_type_form" model="ir.ui.view">
        <field name="name">event.type.form</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="event.view_event_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='event_type_mail_ids']//field[@name='template_id']" position="attributes">
                <attribute name="attrs">{'required': [('notification_type', '=', 'mail')],
                                         'invisible': [('notification_type', '!=', 'communication')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='event_type_mail_ids']//field[@name='template_id']" position="after">
                <field name="communication_id" attrs="{'required': [('notification_type', '=', 'communication')],
                                                        'invisible': [('notification_type', '!=', 'communication')]}"/>
            </xpath>
            <xpath expr="/form/sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
