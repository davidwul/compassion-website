<odoo>
    <template
    id="my_event_include_forms"
    inherit_id="website_event_compassion.my_event_details"
  >
        <xpath expr="//div[@name='main_section']">
            <t t-call="muskathlon.flight_form" t-if="edit_mode=='flight'" />
            <t t-call="muskathlon.passport_form" t-if="edit_mode=='passport'" />
        </xpath>
    </template>
    <template id="flight_form">
        <t
      t-set="outbound_flight"
      t-value="registration.flight_ids.filtered(lambda r: r.flight_type == 'outbound')"
    />
        <t
      t-set="inbound_flight"
      t-value="registration.flight_ids.filtered(lambda r: r.flight_type == 'inbound')"
    />
        <span
      class="hidden"
      data-for="outbound_flight_form"
      t-att-data-values="{
                'registration_id': registration.id,
                'flight_type': 'outbound',
                'flying_company': outbound_flight.flying_company,
                'flight_number': outbound_flight.flight_number,
                'departure': outbound_flight.get_date('departure', 'YYYY-MM-dd HH:mm:ss'),
                'arrival': outbound_flight.get_date('arrival', 'YYYY-MM-dd HH:mm:ss'),
                }"
    />
        <span
      class="hidden"
      data-for="return_flight_form"
      t-att-data-values="{
                'registration_id': registration.id,
                'flight_type': 'return',
                'flying_company': inbound_flight.flying_company,
                'flight_number': inbound_flight.flight_number,
                'departure': inbound_flight.get_date('departure', 'YYYY-MM-D HH:mm:ss'),
                'arrival': inbound_flight.get_date('arrival', 'YYYY-MM-D HH:mm:ss'),
                }"
    />
        <h3>Outbound flight</h3>
        <t t-call="muskathlon.flight_details">
            <t t-set="form_id">outbound_flight_form</t>
        </t>
        <h3>Return flight</h3>
        <t t-call="muskathlon.flight_details">
            <t t-set="form_id">return_flight_form</t>
        </t>
    </template>
    <template id="flight_details">
        <section
      class="s_website_form pt16 pb16 o_colored_level"
      data-vcss="001"
      data-snippet="s_website_form"
      data-name="Form"
      style=""
    >
            <div class="container">
                <form
          action="/website_form/"
          t-att-id="form_id"
          method="post"
          enctype="multipart/form-data"
          class="o_mark_required"
          data-mark="*"
          data-success-mode="redirect"
          t-attf-data-success-page="/my/events/#{slug(registration)}"
          data-model_name="event.flight"
        >
                    <div class="s_website_form_rows row s_col_no_bgcolor">
                        <div
              class="form-group s_website_form_field col-12 s_website_form_dnone"
              data-type="selection"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-sm-auto s_website_form_label"
                  style="width: 200px"
                  for="okfvreeifaa"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Flight type</span>
                                </label>
                                <div class="col-sm">
                                    <input
                    type="hidden"
                    class="form-control s_website_form_input"
                    name="flight_type"
                    required="true"
                    id="okfvreeifaa"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12  s_website_form_model_required  "
              data-type="char"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="obmdlabkn9gh"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Flying company</span>
                                    <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                    <input
                    type="text"
                    class="form-control s_website_form_input"
                    name="flying_company"
                    required="true"
                    id="obmdlabkn9gh"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12  s_website_form_model_required  "
              data-type="char"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="olhli9dppwwe"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Flight number</span>
                                    <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                    <input
                    type="text"
                    class="form-control s_website_form_input"
                    name="flight_number"
                    required="true"
                    id="olhli9dppwwe"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12  s_website_form_dnone  "
              data-type="char"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="oob60xqow5m"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Registration</span>
                                </label>
                                <div class="col-sm">
                                    <input
                    type="hidden"
                    class="form-control s_website_form_input"
                    name="registration_id"
                    required="true"
                    id="oob60xqow5m"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12    "
              data-type="datetime"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="oqq3dtt420ts"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Departure</span>
                                </label>
                                <div class="col-sm">
                                    <div
                    class="s_website_form_datetime input-group date"
                    id="datetimepicker2924868279152417"
                    data-target-input="nearest"
                  >
                                        <input
                      type="text"
                      class="form-control datetimepicker-input s_website_form_input"
                      data-target="#datetimepicker2924868279152417"
                      name="departure"
                      id="oqq3dtt420ts"
                    />
                                        <div
                      class="input-group-append"
                      data-target="#datetimepicker2924868279152417"
                      data-toggle="datetimepicker"
                    >
                                            <div class="input-group-text">
                                                <i class="fa fa-calendar" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12    "
              data-type="datetime"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="odwoqsatebwd"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Arrival</span>
                                </label>
                                <div class="col-sm">
                                    <div
                    class="s_website_form_datetime input-group date"
                    id="datetimepicker1760002398087972"
                    data-target-input="nearest"
                  >
                                        <input
                      type="text"
                      class="form-control datetimepicker-input s_website_form_input"
                      data-target="#datetimepicker1760002398087972"
                      name="arrival"
                      id="odwoqsatebwd"
                    />
                                        <div
                      class="input-group-append"
                      data-target="#datetimepicker1760002398087972"
                      data-toggle="datetimepicker"
                    >
                                            <div class="input-group-text">
                                                <i class="fa fa-calendar" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group col-12 s_website_form_submit"
              data-name="Submit Button"
            >
                            <div
                style="width: 200px;"
                class="s_website_form_label"
              />
                            <a
                href="#"
                role="button"
                class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text"
              >Submit</a>
                            <span id="s_website_form_result" />
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </template>
    <template id="passport_form">
        <span
      id="form_values"
      class="hidden"
      data-for="event_registration_form"
      t-att-data-values="{'registration_id': registration.id}"
    />
        <h3>Passport</h3>
        <section
      class="s_website_form pt16 pb16 o_colored_level"
      data-vcss="001"
      data-snippet="s_website_form"
      data-name="Form"
    >
            <div class="container">
                <form
          id="event_registration_form"
          action="/website_form/"
          method="post"
          enctype="multipart/form-data"
          class="o_mark_required"
          data-mark="*"
          data-success-mode="redirect"
          t-attf-data-success-page="/my/events/#{slug(registration)}"
          data-model_name="event.registration.form"
        >
                    <div class="s_website_form_rows row s_col_no_bgcolor">
                        <div
              class="form-group s_website_form_field col-12    "
              data-type="binary"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-sm-auto s_website_form_label"
                  style="width: 200px"
                  for="oo6z1lsyc1z"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Passport Scan:</span>
                                </label>
                                <div class="col-sm">
                                    <input
                    type="file"
                    class="form-control-file s_website_form_input"
                    name="passport"
                    id="oo6z1lsyc1z"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12 s_website_form_dnone  "
              data-type="char"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="oh4y43y9th2l"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Registration</span>
                                    <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                    <input
                    type="hidden"
                    class="form-control s_website_form_input"
                    name="registration_id"
                    required="true"
                    id="oh4y43y9th2l"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group s_website_form_field col-12    "
              data-type="text"
              data-name="Field"
            >
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label
                  class="col-form-label col-sm-auto s_website_form_label "
                  style="width: 200px"
                  for="opesesohl01f"
                >
                                    <span
                    class="s_website_form_label_content"
                  >Comments</span>
                                </label>
                                <div class="col-sm">
                                    <textarea
                    class="form-control s_website_form_input"
                    name="comments"
                    id="opesesohl01f"
                    rows="3"
                  />
                                </div>
                            </div>
                        </div>
                        <div
              class="form-group col-12 s_website_form_submit"
              data-name="Submit Button"
            >
                            <div
                style="width: 200px;"
                class="s_website_form_label"
              />
                            <a
                href="#"
                role="button"
                class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text"
              >Submit</a>
                            <span id="s_website_form_result" />
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </template>
</odoo>
